          .col-xs-4.col-sm-6.col-md-4.grid-item.nature
            a.prettyphoto(href='https://res.cloudinary.com/debtiw4tn/image/upload/v1464247984/_DSC2757_uztioi.jpg' rel='prettyPhoto[portfolio]')
              img.thumbnail.img-responsive(src='https://res.cloudinary.com/debtiw4tn/image/upload/v1464247984/_DSC2757_uztioi.jpg' alt='Aurora over Svalbard archipelago, Norway.')
          .col-xs-4.col-sm-6.col-md-4.grid-item.nature
            a.prettyphoto(href='https://res.cloudinary.com/debtiw4tn/image/upload/v1464247785/DSCF2474_hjhodu.jpg' rel='prettyPhoto[portfolio]')
              img.thumbnail.img-responsive(src='https://res.cloudinary.com/debtiw4tn/image/upload/v1464247785/DSCF2474_hjhodu.jpg' alt='Flying around Mt. Everest, Nepal.')
          

          
    footer.bg-dark.text-center.text-white 
        .navbar.navbar-expand-lg.navbar-dark.bg-dark
            ul.navbar-nav.me-auto.mb-2.mb-lg-0
                li.nav-item
                a.nav-link(aria-current='page' href='https://ramonchu96.github.io/Portfolio/') Curriculum
                li.nav-item
                a.nav-link(href='https://github.com/ramonchu96') GitHub
